{
      "version": 2,
      "builds": [
            {
                  "src": "index.js",
                  "use": "@vercel/node"
            },
            {
                  "src": "client/package.json",
                  "use": "@vercel/static-build",
                  "config": {
                        "buildCommand": "npm install && npm run build"
                  }
            }
      ],
      "routes": [
            {
                  "src": "/(.*)",
                  "dest": "/"
            }
      ],
      "env": {
            "NODE_ENV": "production"
      }
}