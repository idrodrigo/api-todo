{
      "version": 2,
      "builds": [
            {
                  "src": "client/package.json",
                  "use": "@vercel/static-build",
                  "config": {
                        "buildCommand": "npm run build"
                  }
            },
            {
                  "src": "/",
                  "use": "@vercel/node",
                  "config": {
                        "buildCommand": "npm run start"
                  }
            }
      ],
      "routes": [
            {
                  "src": "/(.*)",
                  "dest": "/"
            }
      ],
      "env": {
            "NODE_ENV": "production"
      }
}